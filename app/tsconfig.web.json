{
  "extends": "../tsconfig.base.json", // 继承 tsconfig.base.json
  "compilerOptions": {
    "composite": true,
    "baseUrl": "./",
    "module": "Preserve",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "composite": true,
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "base/**/*.ts",
    "common/**/*.ts",
    "src/**/*.vue",
    "./auto-imports.d.ts",
    "vite.config.ts",
    "./types.ts",
    "env.d.ts",
    "./typed-router.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}

{
	"extends": "../tsconfig.base.json", // 继承 tsconfig.base.json
	"compilerOptions": {
		"baseUrl": "./",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.vue",
		"vite.config.ts"
	],
	"exclude": [
		"node_modules"
	]
}
{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "preserve",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "lib": [
      "es2020",
      "webworker"
    ],
    "paths": {
      "base/*": [
        "../../app/base/*"
      ],
      "common/*": [
        "../../app/common/*"
      ],
    }
  },
  "include": [
    "src/**/*.ts",
    "./module.d.ts",
    "../../event/src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}

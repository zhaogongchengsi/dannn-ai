{
  "extends": "./tsconfig.base.json", // 继承 tsconfig.base.json
  "compilerOptions": {
    "composite": true,
    "baseUrl": "./",
    "module": "Preserve",
    "moduleResolution": "bundler",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "src/node/main/**/*.ts",
    "src/node/**/*.ts",
    "src/common/**/*.ts",
    "src/base/**/*.ts",
    "src/**/*.d.ts",
    "mcp/**/*.ts",
    "mcp/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
